<?xml version="1.0" encoding="utf-8"?>
<!--
este layout corresponde a la pantalla splash de la app
es la primera pantalla que se muestra al arrancar

se relaciona con:
- splashactivity.java: gestiona el click y el salto a la pantalla principal
- mainactivity.java: es la siguiente pantalla despues del splash

nota:
uso constraintlayout para centrar bien los elementos en cualquier tamano de pantalla
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splashRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!--
    imagen principal del splash
    aqui va el logo con el titulo ya integrado
    -->
    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/bestiario_rpg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
    texto con la version de la app
    se rellena desde splashactivity
    -->
    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0"
        android:textSize="14sp"
        android:alpha="0.75"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
    texto informativo para el usuario
    toda la pantalla es clickable
    -->
    <TextView
        android:id="@+id/txtTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca para continuar"
        android:textSize="16sp"
        android:alpha="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
